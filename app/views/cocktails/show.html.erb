<div class="banner" style="background-image: url('<%= cl_image_path @cocktail.photo.key %>')">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>
 

<div class = "container">
  <div class = "card-product">
  <h1>Ingredients</h1>
  <% @cocktail.doses.each do |dose| %>
    <h3><%= dose.description %> <%= dose.ingredient.name %></h3>
    <%= link_to "delete", dose_path, method: :delete %>
  <% end %>

  <p><%= link_to "Add dose of ingredient", new_cocktail_dose_path(@cocktail) %></p>
  </div>

  <p><%= link_to "Back", root_path %></p>
</div>
