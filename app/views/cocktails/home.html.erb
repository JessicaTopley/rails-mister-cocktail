<div class="container">
  <div class = "card-products">
    <% @cocktails.each do |cocktail| %>
        <%= link_to cocktail_path(cocktail.id), class: "cocktail-card-link" do %>
          <div class="card-product">
            <%= cl_image_tag cocktail.photo.key, :class => "card-product-img" %>
            <div class="card-product-infos">
              <h3><strong><%= cocktail.name %></strong></h3>
              <h3><strong>Ingredients: <%= cocktail.doses.count %></strong></h3>
            </div>
          </div>
        <% end %>
    <% end %>
  </div>
</div>