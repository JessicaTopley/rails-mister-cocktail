<div class="navbar navbar-expand-sm navbar-light navbar-lewagon mb-3">
  <div class="d-flex">
    <a class="navbar-brand" href="#">
      <%= image_tag("martini-icon.png", size: "40x40") %>
    </a>
    <div class="align-middle">
      <p class="nav-text">Not another cocktail</p>
    </div>
  </div>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <%# <%= params.inspect %>

  <% if ["home"].include?(params[:action]) %>
    <%= form_tag(root_path, method: :get) do %>
      <div class="input-group rounded">
        <%= text_field_tag(:search, params[:search], class: 'form-control rounded', placeholder: "Search Cocktails...", arialabel: "Search", ariadescribedby: "search-addon") %>
        <div class="input-group-btn">
          <%= button_tag(type: "submit", class: "btn btn-default") do %>
            <i class="fas fa-search"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>

  <%= link_to "Create new cocktail", new_cocktail_path, :class => "button-grey" %>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to "My cocktails", cocktails_path, class: "nav-link" %>
        </li>
        <div class="nav-item dropdown">
          <%# <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://kitt.lewagon.com/placeholder/users/ssaunier" /> %>
          <div class="avatar" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <% if current_user.avatar.attached? %>
              <%= image_tag(current_user.avatar, alt: "avatar", class: "avatar") %>
            <% else %>
              <%= image_tag 'default_avatar2.png', class: "avatar" %>
            <% end %>
          </div>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My profile", pages_profile_path, class: "nav-link" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link" %>
          </div>
        </div>
      <% else %>
        <li class="nav-item active">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>